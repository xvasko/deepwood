<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <%= gravatar_for @user %>
      <span style="margin-top: 10px"><b>Posts</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <%= render @users %>
        <%= will_paginate :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <% end %>
  </div>
</div>